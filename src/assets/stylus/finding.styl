@import "./basic.styl"
.ul
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  background-color pink
.top
  position relative
  height 50px
  z-index 1
  background-color rgb(255,255,255)
.banner-container
    width 95%
    margin: 10px auto
    border-radius 10px
    overflow hidden
.menu-icon-container
    display: flex
    justify-content: space-between
    padding-bottom: 15px
    border-bottom: 1px solid #ddd
.one-menu-icon
    width: 20%
    text-align: center
    position relative
    span 
        display: block
        text-align: center
    .icon-outer
        width: 40px
        height 40px
        background-color: rgb(255, 59, 47)
        border-radius: 50%
        position: relative
        left: 50%
        margin-left: -20px
        .icon
            line-height: 40px
    .name
        margin-top: 5px
        font-size: 10px
.title
    width: 95%
    height 50px
    margin: 0 auto
    line-height: 50px
    h1
        float left
        font-size: 16px
        font-weight: bold
    span
        float right
        border: 1px solid #cccccc
        height 16px
        line-height: 16px
        font-size: 10px
        border-radius: 14px
        padding: 0 8px
        margin-top: 15px
.list-container
    display: flex
    justify-content: space-between
    width: 95%
    margin: 0 auto
    flex-wrap: wrap
    .one-menu
        width: 32%
        margin: 0 0 8px 0
        .up
            position: relative
            img 
                border-radius: 5px
            .play-count
                position: absolute
                z-index: 2
                top: 0
                right 0
                .num
                    font-size: 10px
                    line-height: 20px
                    color: white
        .down-name
            font-size: 10px 
            line-height: 15px
            text-overflow: -o-ellipsis-lastline;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;

